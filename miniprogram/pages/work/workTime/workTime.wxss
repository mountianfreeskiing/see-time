.work-time .work-dynmic-clock {
  margin-top: 22rpx;
}
.work-time .work-dynmic-clock .work-clock-convas .btn-wrap {
  width: 100%;
  display: inline-flex;
  justify-content: space-between;
}
.work-time .work-dynmic-clock .work-clock-convas .btn-wrap .btn-content-wrap {
  width: 130rpx;
  height: 150rpx;
  margin: 0 80rpx 0 80rpx;
  line-height: 130rpx;
  position: relative;
  display: inline-block;
  background-color: transparent;
  background-repeat: no-repeat;
  background-size: 130rpx 129rpx;
}
.work-time .work-dynmic-clock .work-clock-convas .btn-wrap .btn-content-wrap .pressed {
  display: none;
}
.work-time .work-dynmic-clock .work-clock-convas .btn-wrap .btn-content-wrap > image {
  width: 130rpx;
  height: 129rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.work-time .work-dynmic-clock .work-clock-convas .btn-wrap .btn-content-wrap > text {
  color: #000000;
  font-size: 28rpx;
  position: absolute;
  z-index: 1;
  left: 37rpx;
  top: 0;
}
.work-time .work-dynmic-clock .work-clock-convas .btn-wrap .button-hover .pressed {
  display: inline;
}
.work-time .work-dynmic-clock .work-clock-convas .btn-wrap .button-hover > text {
  color: #ffffff;
}
